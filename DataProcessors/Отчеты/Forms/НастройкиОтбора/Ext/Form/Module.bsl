#Область ОбработчикиКомандФормы

&НаКлиенте
Процедура Готово(Команда)
	
	СтруктураНастроек = Новый Структура;
	СтруктураНастроек.Вставить("Период", Период);
	СтруктураНастроек.Вставить("Период2", Период2);
	СтруктураНастроек.Вставить("ОтборВалюта", ОтборВалюта);
	СтруктураНастроек.Вставить("ОтборКошелек", ОтборКошелек);
	СтруктураНастроек.Вставить("ОтборМетка", ОтборМетка);
	СтруктураНастроек.Вставить("ОтборСтатья", ОтборСтатья);
	СтруктураНастроек.Вставить("ОтборТипОперации", ОтборТипОперации);
	СтруктураНастроек.Вставить("ОтборФизЛицо", ОтборФизЛицо);
	Закрыть(СтруктураНастроек);
	
КонецПроцедуры

#КонецОбласти

