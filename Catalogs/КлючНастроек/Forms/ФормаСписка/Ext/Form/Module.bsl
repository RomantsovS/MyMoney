#Область СлужебныеПроцедурыИФункции

&НаСервере
Процедура ОсновнаяПриИзмененииНаСервере()
	Если Не Элементы.Список.ТекущаяСтрока.Основная Тогда		
		Об = Элементы.Список.ТекущаяСтрока.ПолучитьОбъект();
		Об.Основная = Истина;
		Об.Записать();
	КонецЕсли;
КонецПроцедуры

#КонецОбласти